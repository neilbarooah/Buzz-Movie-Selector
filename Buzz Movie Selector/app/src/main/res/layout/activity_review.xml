<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thundercats50.moviereviewer.activities.ReviewActivity">


    <ProgressBar
        android:id="@+id/rating_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />
=

    <FrameLayout
        android:id="@+id/rating_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/movie_rating"
        android:layout_gravity="right|center_vertical"
        android:numeric="integer"
        android:layout_marginTop="40dp"
        android:layout_marginRight="0dp" />

        <TextView
            android:layout_width="336dp"
            android:layout_height="38dp"
            android:id="@+id/movie_title"
            android:layout_gravity="center_horizontal|top"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="MovieTitle"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Rate(1-100):"
            android:id="@+id/text2"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="40dp" />

        <EditText
            android:layout_width="336dp"
            android:layout_height="166dp"
            android:id="@+id/movie_review"
            android:layout_gravity="center_horizontal|top"
            android:hint="Write Review..."
            android:layout_marginTop="80dp"
            android:layout_marginLeft="0dp" />

        <Button
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/movie_submit"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="140dp"
            android:onClick="addRating"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Write Review:"
            android:id="@+id/textView3"
            android:layout_gravity="left|top"
            android:layout_marginTop="30dp" />

    </FrameLayout>

</FrameLayout>
