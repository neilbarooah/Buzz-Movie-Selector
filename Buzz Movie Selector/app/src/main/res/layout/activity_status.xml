<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/status_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thundercats50.moviereviewer.activities.StatusActivity">

    <ProgressBar
        android:id="@+id/status_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unban"
        android:id="@+id/unban"
        android:layout_marginTop="147dp"
        android:clickable="true"
        android:onClick="unbanUser()"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unlock"
        android:id="@+id/unlock"
        android:onClick="unlockUser()"
        android:clickable="true"
        android:layout_alignTop="@+id/unban"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ban"
        android:id="@+id/ban"
        android:layout_alignTop="@+id/unlock"
        android:layout_alignParentEnd="true"
        android:onClick="banUser()"
        android:clickable="true" />

</RelativeLayout>
